{
  "name": "@chiffon/babel-webpack-plugin",
  "version": "0.0.2",
  "description": "webpack plugin for compiling multiple JavaScript bundles with babel",
  "source": "src/index.ts",
  "ts:main": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "{src,dist}/{,!(__*)}/!(*.test)*.{js,ts}"
  ],
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "fmt": "prettier \"*.{js,ts,json,md}\" \"src/**/*.{js,ts,json,md}\" --write",
    "prepublishOnly": "rm -rf dist && yarn build && yarn test"
  },
  "devDependencies": {
    "@babel/core": "7.12.16",
    "@types/babel__core": "7.1.12",
    "@types/jest": "24.9.0",
    "@types/loader-utils": "1.1.3",
    "@types/memory-fs": "0.3.2",
    "@types/node": "10.17.13",
    "@types/webpack": "4.41.7",
    "@types/webpack-sources": "0.1.5",
    "babel-preset-env": "1.7.0",
    "del": "5.1.0",
    "eslint": "6.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "jest": "24.9.0",
    "memory-fs": "0.4.1",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "loader-utils": "1.2.3",
    "webpack-sources": "1.4.3"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__test-utils__"
    ]
  }
}
