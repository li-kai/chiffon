{
  "name": "@chiffon/prism",
  "version": "0.0.4",
  "description": "Lightweight, robust, elegant syntax highlighting. A spin-off project from Dabblet.",
  "source": "src/components/prism-core.js",
  "main": "dist/components/prism-core.js",
  "files": [
    "{src,dist}/{,!(__*)}/!(*.test)*.{js,ts}"
  ],
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "fmt": "prettier \"*.{js,ts,json,md}\" \"src/**/*.{js,ts,json,md}\" --write",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "@types/node": "10.17.52",
    "eslint": "7.20.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "24.9.0",
    "prettier": "2.2.1",
    "refa": "0.5.0",
    "regexpp": "3.1.0",
    "scslre": "0.1.6",
    "ts-jest": "24.3.0",
    "typescript": "3.7.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
